# ============================================
# TaskFlow - Production Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit the .env file to version control!

# ============================================
# Database Configuration
# ============================================
DB_USERNAME=postgres
DB_PASSWORD=your-secure-postgres-password-here

# ============================================
# JWT Configuration
# ============================================
# Generate secrets with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-minimum-32-characters-here
JWT_REFRESH_SECRET=your-refresh-secret-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=your-secure-rabbitmq-password-here
RABBITMQ_QUEUE=task-events

# ============================================
# CORS Configuration
# ============================================
# Set this to your Vercel frontend URL
# Example: https://taskflow.vercel.app
CORS_ORIGIN=https://your-frontend-url.vercel.app

# ============================================
# Rate Limiting
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ============================================
# For Vercel (Frontend)
# ============================================
# Set this in Vercel dashboard as VITE_API_URL
# Example: http://your-vps-ip or https://api.yourdomain.com
# VITE_API_URL=http://your-vps-ip-here
